<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Photo -->
    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="16dp"
        android:src="@drawable/pd" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profiletext"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Daud"
        android:layout_below="@id/profilePhoto"/>

    <!-- Section for Items You Have Rented -->
    <TextView
        android:id="@+id/location_isb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profiletext"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Islamabad\t\t\t\t18 items posted\t\t 24 items rented"
        android:textColor="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rentedItemsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePhoto"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:text="Items You Have Rented"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rentedItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/rentedItemsTitle"
        android:layout_marginTop="8dp" />

    <!-- Section for Your Items -->
    <TextView
        android:id="@+id/yourItemsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rentedItemsRecyclerView"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="15dp"
        android:text="Your Items"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/yourItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/yourItemsTitle"
        android:layout_marginTop="8dp" />

    <!-- Additional UI Elements for Profile Information -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:background="#e06d00"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:background="#e06d00"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/chatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:background="#e06d00"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/profileButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:background="#e06d00"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
